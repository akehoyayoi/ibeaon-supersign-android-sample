<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:text="@string/kuusha_text"
            android:layout_height="wrap_content" android:id="@+id/kuussha" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_width="wrap_content"
            android:textSize="256sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:textAlignment="center"
            android:visibility="invisible"/>
    <TextView
            android:text="@string/geisha_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/geisha"
            android:textSize="256sp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:visibility="invisible"
            android:textAlignment="center"/>
    <TextView
            android:text="@string/jissha_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/jissya"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:textSize="256sp" android:textAlignment="center"
            android:visibility="invisible"/>
    <TextView
            android:text="@string/shiharai_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/shiharai"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp" android:textSize="256sp"
            android:textAlignment="center" android:visibility="invisible"/>
    <TextView
            android:text="@string/warimashi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/warimashi"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.52"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp" android:textSize="256sp"
            android:textAlignment="center" android:visibility="invisible"/>
    <TextView
            android:layout_height="wrap_content" android:id="@+id/bleDebugView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="384dp"
            app:layout_constraintBottom_toBottomOf="parent" android:textAlignment="center" android:textSize="12sp"
            android:layout_width="wrap_content" app:layout_constraintStart_toStartOf="parent"
    />
    <TextView
            android:text="UUID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/webDebugView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            android:textAlignment="viewStart" android:textSize="12sp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text="@string/_1000"
            android:ems="10"
            android:id="@+id/carNoText"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/syncButton"
            android:textAlignment="textEnd" android:hint="@string/car_no"
            app:layout_constraintStart_toEndOf="@+id/webDebugView" android:layout_marginStart="8dp"/>
    <Button
            android:text="@string/sync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/syncButton" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
    />

</android.support.constraint.ConstraintLayout>